{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    %% warnings_as_errors,
    debug_info
]}.

{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.

{sub_dirs, ["rel"]}.

{deps, [
    {getopt, ".*", {git, "git://github.com/jcomellas/getopt.git", {tag, "v0.8.2"}}},
    {amqp_client, ".*", {git, "https://github.com/iamaleksey/amqp_client.git", "HEAD"}},
	{sync, ".*", {git, "https://github.com/ten0s/sync.git", {branch, "dk_support_release"}}}
]}.

{escript_name, "rmq_tool"}.

{escript_incl_apps, [
    amqp_client,
    rabbit_common,
    getopt
]}.
